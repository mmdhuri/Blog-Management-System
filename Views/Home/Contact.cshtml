@model Student_Management_System.Models.Home.ContactModel
@{
    ViewBag.Title = "Contact";
}
<section class="login-page-section py-20">
    <div class="row justify-content-center">
        <div class="col-md-3">
            <div class="card login-form-wrapper">
                <div class="card-header align-items-center justify-content-center">
                    <div class="text-center">
                        <h4 class="mb-1">Connect with us.</h4>
                        <p class="mb-0">We'd love to hear from you!</p>
                    </div>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>Fullname</label>
                            @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>PhoneNumber</label>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Message</label>
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                        </div>
                    
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextAreaFor(m => m.ContactAddress, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-sm btn-primary"><i class="fa-regular fa-paper-plane"></i> Send</button>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>